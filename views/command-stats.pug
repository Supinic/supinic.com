doctype html
html
    head
        block topheader
        include ./header.pug
        include ./navigation.pug

        script(src="/public/js/Chart.js")
        script.
            $(document).ready(function () {
                const config = (name) => ({
                    legends: {
                        display: false
                    },
                    responsive: true,
                    title: {
                        display: true,
                        text: name,
                        fontSize: 30,
                        fontFamily: "Arial"
                    },
                    tooltips: {
                        mode: "index",
                        intersect: false,
                    },
                    hover: {
                        mode: "nearest",
                        intersect: true
                    },
                    scales: {
                        xAxes: [{
                                display: true,
                                ticks: {
                                    min: 0,
                                    minRotation: 45
                                },
                                scaleLabel: {
                                    display: true,
                                    labelString: "Hour of day"
                                }
                        }],
                        yAxes: [{
                            display: true,
                            ticks: {
                               min: 0
                            },
                            scaleLabel: {
                                display: true,
                                labelString: "Invocations"
                            }
                        }]
                    }
                });

                const canvas = document.getElementById("hourly-stats").getContext("2d");
                new Chart(canvas, {
                    type: "bar",
                    data: {
                        labels: [...Array(24)].map((_, ind) => ind),
                        datasets: [{
                            min: 0,
                            label: "Commands per hour",
                            backgroundColor: "rgba(0, 50, 0, 1)",
                            borderColor: "rgba(0, 50, 0, 0.9)",
                            data: !{hourlyStats}
                        }]
                    },
                    options: config("Commands per hour")
                });
            });
        meta(charset="UTF-8")
    body
        block navigation
        center
            h2 Command statistics today
        div
            canvas#hourly-stats
        br
        footer
            center.
                !{amount} command executions tracked since 24 hours ago